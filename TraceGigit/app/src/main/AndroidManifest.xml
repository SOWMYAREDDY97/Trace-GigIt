<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.traceandgigit">

    <!-- Permission must be declared in order to use Internet -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>

    <!-- This is called the Android Manifest This is where all the Activities,
     Receivers, Services, and meta-data are declared and is used across the life time of the app -->

    <application
        android:name=".ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".SplashActivity">
            <intent-filter>
                <!-- This will tell Android OS that the Activity is the Main one when App opens -->
                <action android:name="android.intent.action.MAIN" />

                <!-- This will tell Android OS that this Activity is the one
                     that should be opened when user clicks on App Icon     -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:theme="@style/ActivityTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".SignInActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".SignUpActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".TakePictureAndUpload"
            android:screenOrientation="portrait"/>

        <activity android:name=".UploadedImages"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".ForgotPasswordActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".OwnerActivity"
            android:theme="@style/ActivityTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".Owner_NotoficationsActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".CalenderViewActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>


        <activity android:name=".menulist"
            android:theme="@style/ActivityTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".SaloonProfileActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".ContactUsActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>


        <activity android:name=".SettingsScreen"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>


        <activity android:name=".CustomerProfileActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <meta-data
            android:name="com.parse.SERVER_URL"
            android:value="@string/serverUrl" />
        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:value="@string/appID" />
        <meta-data
            android:name="com.parse.CLIENT_KEY"
            android:value="@string/clientKey" />


        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true" />

        <service android:name=".FetchAddressService"
            android:exported="false"/>

    </application>

</manifest>