<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".MainActivity">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <LinearLayout
       android:id="@+id/toolBarLayou"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">



       <TextView
           android:id="@+id/title"
           android:text="Saloon"
           android:textSize="28sp"
           android:textStyle="bold"
           android:padding="8dp"
           android:textColor="@android:color/black"
           android:layout_gravity="center_vertical"
           android:layout_marginStart="148dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

       <ImageView
           android:id="@+id/searchImage"
           android:src="@android:drawable/ic_menu_search"
           android:layout_gravity="center_vertical"
           android:layout_marginStart="36dp"
           android:layout_width="70dp"
           android:layout_height="70dp"/>


   </LinearLayout>


  <LinearLayout
      android:id="@+id/gridView"
      android:layout_below="@+id/toolBarLayou"
      android:layout_marginTop="120dp"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <LinearLayout
          android:id="@+id/imageSet1"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">


          <ImageView
              android:id="@+id/image1"
              android:src="@drawable/app_logo"
              android:layout_marginEnd="32dp"
              android:layout_width="120dp"
              android:layout_height="120dp"/>

          <ImageView
              android:id="@+id/image2"
              android:src="@drawable/app_logo"
              android:layout_marginStart="32dp"
              android:layout_width="120dp"
              android:layout_height="120dp"/>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/imageSet2"
          android:layout_marginTop="60dp"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView
              android:id="@+id/image3"
              android:src="@drawable/app_logo"
              android:layout_width="120dp"
              android:layout_marginEnd="32dp"
              android:layout_height="120dp"/>

          <ImageView
              android:id="@+id/image4"
              android:src="@drawable/app_logo"
              android:layout_marginStart="32dp"
              android:layout_width="120dp"
              android:layout_height="120dp"/>

      </LinearLayout>
  </LinearLayout>

    <ImageView
        android:id="@+id/animFrame"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="140dp"
        android:layout_height="140dp"/>

    <ImageView
        android:id="@+id/targetLocation"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/baseline_gps_off_black_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/drawermenu1"
        android:layout_gravity="start"
        >

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>